<view class="container">
  <view class="header">
    <!-- 顶部区域已调整高度 -->
  </view>
  
  <view class="settings-panel">
    <view class="form-item">
      <text class="label">目标名称</text>
      <input class="input" value="{{goalName}}" bindinput="onGoalNameInput" />
    </view>

    <view class="form-item">
      <text class="label">开始日期</text>
      <picker mode="date" value="{{startDate}}" start="2020-01-01" end="2030-12-31" bindchange="onStartDateChange">
        <view class="picker">
          {{startDate}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">目标天数</text>
      <input class="input" type="number" value="{{targetDays}}" bindinput="onTargetDaysInput" />
    </view>

    <view class="form-item">
      <text class="label">模式选择</text>
      <view class="radio-group">
        <radio-group bindchange="onModeChange" class="radio-container">
          <label class="radio-item">
            <radio value="countup" checked="{{mode === 'countup'}}" color="#4a90e2"/>
            <text>计时</text>
          </label>
          <label class="radio-item">
            <radio value="countdown" checked="{{mode === 'countdown'}}" color="#4a90e2"/>
            <text>倒计时</text>
          </label>
        </radio-group>
      </view>
    </view>

    <view class="form-item">
      <text class="label">形状选择</text>
      <view class="radio-group">
        <radio-group bindchange="onShapeChange" class="radio-container">
          <label class="radio-item">
            <radio value="rect" checked="{{shape === 'rect'}}" color="#4a90e2"/>
            <text>矩形</text>
          </label>
          <label class="radio-item">
            <radio value="circle" checked="{{shape === 'circle'}}" color="#4a90e2"/>
            <text>圆形</text>
          </label>
        </radio-group>
      </view>
    </view>

    <button class="save-btn" bindtap="saveSettings">保存设置</button>
  </view>
</view>