<view class="container">
  <!-- 设置链接 -->
  <navigator class="settings-link" url="/pages/settings/settings" style="position: absolute; left: 675rpx; top: 25rpx">
    <icon type="settings" size="20" color="#fff"></icon>
  </navigator>

  <!-- 目标名称 -->
  <view class="goal-name">{{goalName}}</view>

  <!-- 矩形进度条 -->
  <view class="progress-container" wx:if="{{shape === 'rect'}}">
    <view class="rect-progress-bg">
      <view class="rect-progress-fill" style="width: {{progressPercent}}%; background-color: {{mode === 'countup' ? '#4a90e2' : '#ff6b6b'}};"></view>
    </view>
  </view>

  <!-- 圆形进度条 -->
  <view class="progress-container circle-container" wx:if="{{shape === 'circle'}}">
    <canvas 
      class="circle-progress" 
      id="circleProgress"
      canvas-id="circleProgress"
      width="{{canvasSize}}"
      height="{{canvasSize}}"
      bindtap="onCanvasTap">
    </canvas>
  </view>

  <!-- 进度信息 -->
  <view class="progress-info">
    <text class="progress-text">{{progressPercent}}%</text>
    <text class="progress-details">{{currentValue}}/{{targetValue}}</text>
  </view>
</view>